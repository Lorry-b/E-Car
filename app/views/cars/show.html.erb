<div class="container">
  <div class="mb-3">
    <h1 class="title"><strong><%= @car.brand %></strong></h1>
  </div>

  <div class="row h-100">

    <div class = "col-7">
      <%= image_tag @car.picture_url, class: "img-fluid im_car" %>
    </div>

    <div class = "col-5 infos">
      <div id="car-infos" >
        <h3 class= "title" id="category"><em><%= @car.category%></em></h3>
        <div class="mt-2 title" id="location">Available at <%= @car.location %></div>
        <% if @car.user != current_user %>
          <div class = "mt-3" id="total-price">Total price : </div> <%# total price calculation to be added  %>
        <% end %>
      </div>
      <% if @car.user != current_user %>
        <div id="form_new">
            <%= render "shared/new", car: @booking.car, booking: @booking %>
        </div>
      <% end %>
    </div>
  </div>
</div>
