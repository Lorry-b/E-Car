<div class="container">
  <h2 class="title"><%= current_user.first_name%> <%=current_user.last_name %></h2>

  <div class="mt-3 mb-2">
    <h3 class="title">Account informations</h3>
    <h6><strong>Username: </strong><%=current_user.username%></h6>
    <h6><strong>Email: </strong><%=current_user.email%></h6>
  </div>

  <div class="mt-4">
    <%=link_to "Add a car", new_car_path, class: "btn btn-outline-primary"%>
  </div>

<br>

  <div class="mt-4 mb-2">
    <% if current_user.owner == true %>

      <h2 class="title"> My cars for rent </h2>

      <div class="flex-container-cars-owner mt-4">
          <% current_user.cars.each do |car| %>
              <div class="card-product-owner" class="flex-item">
                <div class="card-info-owner">
                  <h6><strong><%= car.brand %></strong><h6>
                  <p>Available from <%= car.start_availability %> to <%= car.end_availability %></p>
                </div>
              </div>
          <% end %>
      </div>
  </div>
<br>
  <div class="mt-4 mb-2">
    <h2 class="mb-4 title"> Booking requests received </h2>
      <% @booking.each do |booking| %>
        <% if current_user == booking.car.user %>
          <div class="card mb-3 rounded shadow" style="max-width: 540px;">
              <div class="row g-0">
                <div class="col-md-4">
                  <img src=<%= booking.car.picture_url %>  class="img-fluid rounded-start request-card-picture" alt="...">
                </div>
                <div class="col-md-8">
                  <div class="card-body">
                    <h5 class="card-title"><strong><%= booking.car.brand %></strong></h5>
                    <p class="card-text"><%= booking.user.first_name %> <%= booking.user.last_name %></p>
                    <p class="card-text"><small class="text-body-secondary">From <%= booking.starting_date %> to <%= booking.ending_date %></small></p>
                    <p class="card-text"><%= booking.status %></p>
                    <% if booking.status == "Pending" %>
                      <a class="btn btn-outline-primary" href=<%= edit_booking_path(booking)%> role="button">Review</a>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
        <% end %>
      <% end %>

      <% else %>
          <h1>You're not a owner yet !</h1>
          <p class="btn btn-primary">Click here to add your cars to rent.</p>
      <% end %>

  </div>
</div>
